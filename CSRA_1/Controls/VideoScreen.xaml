<UserControl x:Class="CSRA_1.Controls.VideoScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mcl="clr-namespace:Camera_NET;assembly=Camera_NET" 
             
             Unloaded="Window_Closing"
             mc:Ignorable="d" Height="370" Width="380">
    <Grid x:Name="grid1" Height="240" Width="320" Margin="34,25,26,105">
        <WindowsFormsHost x:Name="CamCntrl"
                        Height="240" Width="320" VerticalAlignment="Top" Visibility="Visible" Margin="0,0,0,0">
            <mcl:CameraControl Name="mc"/>
        </WindowsFormsHost>

        <Button Content="Done" HorizontalAlignment="Center" Width="100" Margin="220,0,0,-52" Padding="8" FontSize="16" Name="buttonDone" Click="buttonDone_Click" VerticalAlignment="Bottom" Height="38"/>
        <ComboBox x:Name="comboBoxCameraList" HorizontalAlignment="Left" Height="38" Margin="-5,254,0,-52" VerticalAlignment="Top" Width="220" SelectionChanged="comboBoxCameraList_SelectionChanged" FontSize="16"/>
    </Grid>
</UserControl>
